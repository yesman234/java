
public class MilitaryTime {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int h =0;
		int m =0;
		int s =0;
		
		for(s = 1; s != -1; s++)
		try {
			Thread.sleep((long) 0.005);{
		}
			if(s >=60){
				m++;
				s = 0;
				if( m >=60){
					h++;
					m =0;
					if( h >= 24){
						h=0;
				}
					}
				System.out.println( h + ":"+ m +":"+s);
			}
		}
}
	

}
